<body>
  <h2> Create a review </h2>
  <%= form_tag ground_reviews_path(), id:"new_form", :method => :post do %>
  <select name="rating" id="rating_id">
    <option> 1 </option>
    <option> 2 </option>
    <option> 3 </option>
    <option> 4 </option>
    <option> 5 </option>
  </select>
  <input type="text" name="review" id="comment"/>
  <input type="submit" id="submit_it"/>
  <% end %>
</body>  
<script>
  function init(){
      document.getElementById("comment").value = localStorage.getItem("comment");
      document.getElementById("rating_id").value = localStorage.getItem("rating");
      document.getElementById("new_form").submit();
  }
  init();
</script>

<style>
  body{
      visibility: hidden;
  }
</style>
