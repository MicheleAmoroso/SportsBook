<!DOCTYPE html>
<style>
  
  body{
      margin: 0px;
  }
      
</style>

<html>
  <head>
    <title>SportsBook</title>
    <style type="text/css">
      .header{
	  background-color: #24536b;
	  color:white;
	  padding: 15px;
	  overflow: auto;
      }
      .logo{
	  float: left;
      }
      .user{
	  float: right;
      }
      .logo-link{
	  color: white;
	  text-decoration: none;
      }

      .profile-image-application{
	  width: 70px;
	  height: 70px;
	  border-radius: 50%;
	  border: 2px solid black;
	  margin-right: 10px;
      }
      .profile-image-application:hover{
	  opacity: 0.8;
      }
      
      .logout{
	  color: lightblue;
	  margin: 10px;
      }
      .logout:hover{
	  color: blue;
      }
      
    </style>
    <div class="header">
      <div class="logo">
	<table>
	  <tr><td><a href="/grounds" class="logo-link"> <h1>SportsBook</h1> </a></td></tr>
	</table>
      </div>
      <div class="user">
	<% if user_signed_in? %>
	<table>
	  <tr>
	    <td><%= current_user.email %></td>
	    <td> <%= link_to "Logout", destroy_user_session_path, :method => :delete, class: "logout" %></td>
	    <td><%= link_to image_tag(url_for(current_user.profile_image), class: "profile-image-application"), user_path(current_user.id), :method => :get, id: "profileLink"%></td>
	  </tr>
	</table>
	<% end %>
      </div>
    </div>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
